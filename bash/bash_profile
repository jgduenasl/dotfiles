#-------------- external functions--------------------
# makes 'cs' cd and ll
function cs () {
    cd "$1" && ll
    }

# Creating task #
# $1 is task name
function task(){
    mkdir "$1" && cd "$1"
    mkdir input src output
    cd ..
    tree -C
}

